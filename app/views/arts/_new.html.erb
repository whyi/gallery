<%= form_for :art, :html => {:multipart => true}, url: @path do |f| %>
  <div class="form-group">
    <%= f.label :title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class=>"form-control", :maxlength => 30, :size => 30 %>
    </div>
  </div>
 
  <div class="form-group">
    <%= f.label :description, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :medium, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medium, :class=>"form-control" %>
    </div>
  </div>
 
  <div class="form-group">
    <%= f.label :category, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= select :art, :category_cd, enum_option_pairs(Art, :category, true), {}, {:class=>"form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :width, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:width, options_for_select(10..100), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :height, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:height, options_for_select(10..100), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:year, options_for_select(2010..Date.today.year), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :filename, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :class=>'btn btn-primary' %>
  </div>
<% end %>