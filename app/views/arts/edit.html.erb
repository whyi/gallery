<h2>Edit</h2>
<%= form_for @art do |f| %>
  <input hidden name="id" value="<%=@art.id%>">
  <div class="form-group">
    <%= f.label :title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class=>"form-control", :maxlength => 30, :size => 30 %>
    </div>
  </div>
 
  <div class="form-group">
    <%= f.label :description, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :medium, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medium, :class=>"form-control" %>
    </div>
  </div>
 
  <div class="form-group">
    <label class="col-sm-2 control-label" for="art_category">Category</label>
    <div class="col-sm-10">
      <select class="form-control" id="art_category_cd" name="art[category_cd]">
        <option value="0">Studies</option>
        <option value="1">Themes</option>
        <option value="2">Drawings</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :width, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:width, options_for_select(10..100), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :height, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:height, options_for_select(10..100), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:year, options_for_select(2010..Date.today.year), {}, {:class=>"form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :filename, :class=>"form-control" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit "Update", :class=>'btn btn-primary' %>
  </div>

<% end %>
