<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html ng-app="gallery">
<head>
  <title>Gallery</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Petrona" />
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Signika" />
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Finger+Paint" />
</head>

<body ng-controller="MenuController">

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" id="title" ui-sref="home">HYUNJU KIM</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a ui-sref="studies" class = "links">studies</a></li>
        <li><a ui-sref="themes" class = "links">themes</a></li>
        <li><a ui-sref="drawings"  class = "links">drawings</a></li>
        <li><a ui-sref="artist_info" class = "links">artist info</a></li>
        <% if @current_user %>
          <li><a href = "#"><%=@current_user.username%> profile</a></li>
          <li><a href = "/logout">logout</a></li>
        <% end %>        
      </ul>
    </div><!--/.nav-collapse -->

    <div ui-view><div>
    <%=yield%>

  </div> <!-- /container -->
</div>



</body>
</html>