<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html ng-app="gallery">
<head>
  <title>Gallery</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller="MenuController">

<a href = "#" class = "button" ng-click="setCategory(0)">test0</a>
<a href = "#" class = "button" ng-click="setCategory(1)">test1</a>
<a href = "#" class = "button" ng-click="setCategory(2)">test2</a>

<li ng-repeat="art in arts | filter:{category_cd:getCategory()}">
  {{art.title}} | {{art.category_cd}} | {{art.width}} by {{art.height}}
</li>


<div ng-view>
  <%= yield %>
</div>

</body>
</html>