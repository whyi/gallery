<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :category %><br>
    <%= select :article, :category_cd, enum_option_pairs(Article, :category, true) %>
  </p>

  <p>
    <%= f.label :width %><br>
    <%= f.select :width, options_for_select(10..100)%>
  </p>

  <p>
    <%= f.label :height %><br>
    <%= f.select :height, options_for_select(10..100)%>
  </p>

  <p>
    <%= f.label :file %><br>
    <%= f.file_field :filename %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>